* text=auto

# keep source files LF in the repo
*.py   text eol=lf
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.css  text eol=lf
*.html text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.sh   text eol=lf

# Windows scripts should remain CRLF
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf

# Binary files (no EOL conversion)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.pdf  binary
